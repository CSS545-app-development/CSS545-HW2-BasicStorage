<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Button to load the saved image from internal storage -->
        <Button
            android:id="@+id/loadImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Image from Assets" />

        <!-- ImageView to display the selected/saved image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Selected Image"
            android:background="@android:color/darker_gray" />

        <!-- EditText for user settings -->
        <EditText
            android:id="@+id/settingsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter user settings" />

        <!-- Button to save user settings -->
        <Button
            android:id="@+id/saveSettingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Settings" />

        <!-- Button to load user settings -->
        <Button
            android:id="@+id/loadSettingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Settings" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
